<div class="page-header">
  <h1>Movie #<%= @movie.id %></h1>
</div>

<dl class="dl-horizontal">

  <dt>Image</dt>
  <dd> <img src="<%= @movie.image_url %>" alt="image" height="150"> </dd>

  <dt>Name</dt>
  <dd><%= @movie.name %></dd>

  <dt>Director</dt>
  <dd><%= @movie.director %></dd>

  <dt>Genre</dt>
  <dd><%= @movie.genre.genre_name %></dd>

  <dt>Synopsis</dt>
  <dd><%= @movie.synopsis %></dd>

  <dt>Duration (min) </dt>
  <dd><%= @movie.duration %></dd>

  <dt>Release date</dt>
  <dd><%= @movie.release_date %></dd>

  <dt>Users who favorited</dt>
  <dd>
    <% @movie.user_favorited_movies.each do |favorite| %>
        <%= favorite.user.username %>
    <% end %>


  </dd>
</dl>
