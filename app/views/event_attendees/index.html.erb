<div class="page-header">
  <h1>Event attendees</h1>
</div>

<p><a href="/event_attendees/new" class="btn btn-primary">Add a New Event Attendee</a></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Event</th>
      <th>User</th>
      <th>Status</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @event_attendees.each do |event_attendee| %>
      <tr>
        <td><%= event_attendee.event_id %></td>
        <td><%= event_attendee.user.username %></td>
        <td><%= event_attendee.status %></td>
        <td>
          <a href="/event_attendees/<%= event_attendee.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
        </td>
        <td>
          <a href="/event_attendees/<%= event_attendee.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
        </td>
        <td>
          <a href="/delete_event_attendee/<%= event_attendee.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

