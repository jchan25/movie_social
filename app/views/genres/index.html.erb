<div class="page-header">
  <h1>Genres</h1>
</div>

<p><a href="/genres/new" class="btn btn-primary">Add a New Genre</a></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Genre name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.genre_name %></td>
        <td>
          <a href="/genres/<%= genre.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
        </td>
        <td>
          <a href="/genres/<%= genre.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
        </td>
        <td>
          <a href="/delete_genre/<%= genre.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

