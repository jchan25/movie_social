<div class="page-header">
  <h1>Add Event</h1>
</div>

<% if @event.errors.any? %>
  <% @event.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>


<form action="/create_event" class="form-horizontal">
  <!-- Label and input for user_ID -->
  <div class="form-group">
    <label for="user_ID" class="col-sm-2 control-label">
      Username
    </label>
    <div class="col-sm-10">
     <%= select_tag(:user_ID, options_from_collection_for_select(User.all, :id, :username, @event.user_ID), :class => "form-control") %>
    </div>
  </div>

 <!-- Label and input for event name-->
  <div class="form-group">
    <label for="name" class="col-sm-2 control-label">
      Event name
    </label>
    <div class="col-sm-10">
       <textarea id="name" name="name" placeholder="Event name" class="form-control" rows="1"><%= @event.name %></textarea>
    </div>
  </div>

  <!-- Label and input for theater_address -->
  <div class="form-group">
    <label for="theater_address" class="col-sm-2 control-label">
      Theater address
    </label>
    <div class="col-sm-10">
      <textarea id="theater_address" name="theater_address" placeholder="Theater address" class="form-control" rows="3"><%= @event.theater_address %></textarea>
    </div>
  </div>

  <!-- Label and input for movie_id -->
  <div class="form-group">
    <label for="movie_id" class="col-sm-2 control-label">
     Movie
    </label>
    <div class="col-sm-10">
     <%= select_tag(:movie_id, options_from_collection_for_select(Movie.all, :id, :name, @event.movie_id), :class => "form-control") %>
    </div>
  </div>

  <!-- Label and input for datetime -->
  <div class="form-group">
    <label for="datetime" class="col-sm-2 control-label">
      Datetime
    </label>
    <div class="col-sm-10">
      <input type="text" id="datetime" name="datetime" placeholder="Datetime" class="form-control" value="<%= @event.datetime %>">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Create Event" class="btn btn-primary">
    </div>
  </div>
</form>
